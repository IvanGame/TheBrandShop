<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TheBrand</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="wrapper">
        <!-- @import "header.html" -->
        <main class="content">
            <section class="content__background background">
                <div class="container">
                    <div class="banner">
                        <div class="banner__article">
                            <h1 class="banner__title">THE BRAND</h1>
                            <p class="banner__text">OF LUXERIOUS <span class="banner__span">FASHION</span></p>
                        </div>
                        <div class="banner__con">
                            <div class="banner__image">
                                <img src="img/main_img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content__categories categories">
                <div class="container">
                    <div class="categories__gallery gallery">
                        <div class="gallery__items">
                            <div class="gallery__item gallery__item-big">
                                <a href="#" class="gallery__link">
                                    <img src="img/cat_man.jpg" alt="">
                                    <div class="gallery__info">
                                        <h3 class="gallery__title">
                                            HOT DEAL
                                        </h3>
                                        <p class="gallery__text">FOR MAN</p>
                                    </div>
                                </a>
                            </div>
                            <div class="gallery__item">
                                <a href="#" class="gallery__link">
                                    <img src="img/cat_wom.jpg" alt="">
                                    <div class="gallery__info">
                                        <h3 class="gallery__title">
                                            30% OFFER
                                        </h3>
                                        <p class="gallery__text">WOMEN</p>
                                    </div>
                                </a>
                            </div>
                            <div class="gallery__item gallery__item-big">
                                <a href="#" class="gallery__link">
                                    <img src="img/cat_kid.jpg" alt="">
                                    <div class="gallery__info">
                                        <h3 class="gallery__title">
                                            NEW ARRIVALS
                                        </h3>
                                        <p class="gallery__text">FOR KIDS</p>
                                    </div>
                                </a>
                            </div>
                            <div class="gallery__item">
                                <a href="#" class="gallery__link">
                                    <img src="img/cat_acc.jpg" alt="">
                                    <div class="gallery__info">
                                        <h3 class="gallery__title">
                                            LUXIROUS & TRENDLY
                                        </h3>
                                        <p class="gallery__text">ACCESORIES</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- <section class="content__products products">
                <div class="container">
                    <div class="products__title"></div>
                </div>
            </section> -->
        </main>
    </div>
    <script src="js/main.js"></script>
</body>

</html>