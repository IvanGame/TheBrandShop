            <div class="content__cards cards">
                <div class="container">
                    <div class="cards__row">
                        <div class="cards__card">
                            <h4 class="cards__title">
                                Shipping Adress
                            </h4>
                            <form action="">
                                <ul class="cards__select-1">
                                    <li class="cards__ar1">
                                        <a href="javascript://" class="cards__main-link">Bangladesh</a>
                                        <span class="cards__arrow arrow-5"></span>
                                        <ul class="cards__submenu1">
                                            <li><a class="cards__submenu-link-2" href="#">Moscow</a></li>
                                            <li><a class="cards__submenu-link-2" href="#">New Yourk</a></li>
                                            <li><a class="cards__submenu-link-2" href="#">Abu-Dabi</a></li>
                                            <li><a class="cards__submenu-link-2" href="#">Kiev</a></li>
                                            <li><a class="cards__submenu-link-2" href="#">Bangladesh</a></li>
                                        </ul>
                                    </li>
                                </ul>
                                <input class="cards__input" type="text" name="" id="" placeholder="State">
                                <input class="cards__input" type="text" name="" id="" placeholder="Postcode / Zip">
                                <button class="cards__btn" type="submit">get a quote</button>
                            </form>
                        </div>
                        <div class="cards__card">
                            <h4 class="cards__title">
                                coupon discount
                            </h4>
                            <p class="cards__article">Enter your coupon code if you have one</p>
                            <form action="">
                                <input class="cards__input" type="text" name="" id="" placeholder="State">
                                <button class="cards__btn" type="submit">Apply coupon</button>
                            </form>
                        </div>
                        <div class="cards__card cards__card_bc">
